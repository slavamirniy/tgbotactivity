{
  "compilerOptions": {
    "module": "Node16",
    "esModuleInterop": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictNullChecks": true,
    "target": "es2019",
    "moduleResolution": "node16",
    "sourceMap": true,
    "outDir": "./built",
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "*": [
        "node_modules/*",
      ],
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/index.ts",
    "src/entrypoints/*"
  ]
}